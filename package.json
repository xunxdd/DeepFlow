{
  "name": "deepseek-code-helper",
  "displayName": "DeepSeek Code Helper",
  "description": "AI-powered coding assistant using DeepSeek V3 model - provides intelligent code completions, explanations, and refactoring",
  "version": "0.0.1",
  "publisher": "x-d",  // Changed to lowercase/hyphenated (marketplace requirement)
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Artificial Intelligence"
  ],
  "icon": "images/icon.png",  // Add 128x128 PNG icon
  "activationEvents": [
    "onCommand:deepseek.query",
    "onCommand:deepseek.setApiKey"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "deepseek.query",
        "title": "Ask DeepSeek",
        "category": "AI"
      },
      {
        "command": "deepseek.setApiKey",
        "title": "Set DeepSeek API Key",
        "category": "AI"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "deepseek.query",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {  // Added for API key settings
      "title": "DeepSeek",
      "properties": {
        "deepseek.apiKey": {
          "type": "string",
          "markdownDescription": "Your [DeepSeek API Key](https://platform.deepseek.com)",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.25.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/x-d/deepseek-code-helper"  
  },
  "bugs": {
    "url": "https://github.com/x-d/deepseek-code-helper/issues"
  },
  "homepage": "https://github.com/x-d/deepseek-code-helper#readme",
  "license": "MIT"  
}